<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:id="@+id/_v_nomTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom et PrÃ©nom"
        android:paddingBottom="5dp"/>
    <RelativeLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/firstRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/_v_nomTv"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/_v_dateCmdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de la commande "
           />
        <TextView
            android:id="@+id/_v_dateLivTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de livraison "
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/firstRl">
        <TextView
            android:id="@+id/_v_mT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montant total"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/_v_avance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avance"
            android:layout_alignParentEnd="true"
           />
        <TextView
            android:id="@+id/_v_reste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reste"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

</RelativeLayout>